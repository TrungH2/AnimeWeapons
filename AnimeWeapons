-- ENEMIES TAB CONTENT
local enemiesContent = tabFrames["üéØ ENEMIES"]
CreateLabel("ENEMY SELECTOR:", UDim2.new(1, 0, 0, 20), UDim2.new(0, 10, 0, 5), enemiesContent, true, 16, COLOR_ACCENT)

local clearSelectionBtn = CreateActionButton("Clear Selected Positions (" .. #selectedEnemyNames .. "x)", "X√≥a t·∫•t c·∫£ v·ªã tr√≠ k·∫ª ƒë·ªãch ƒë√£ ch·ªçn", function()
    selectedEnemyNames = {}
    print("üóëÔ∏è ƒê√£ x√≥a danh s√°ch k·∫ª ƒë·ªãch ƒë∆∞·ª£c ch·ªçn.")
end, enemiesContent)

local refreshEnemiesBtn = CreateActionButton("Refresh/Scan Enemies", "Qu√©t l·∫°i k·∫ª ƒë·ªãch trong ph·∫°m vi 500 stud", function()
    for _, child in pairs(enemiesContent:GetChildren()) do
        if child.Name ~= "UILabel" and child ~= refreshEnemiesBtn and child ~= clearSelectionBtn then 
            child:Destroy() 
        end
    end
    
    local enemyGroups = GetEnemyGroups()
    local sortedEnemyNames = {}
    for name, _ in pairs(enemyGroups) do 
        table.insert(sortedEnemyNames, name) 
    end
    table.sort(sortedEnemyNames)

    CreateLabel("---", UDim2.new(1, 0, 0, 10), UDim2.new(0, 10, 0, 0), enemiesContent, false, 14, COLOR_TEXT_DIM)
    
    for _, name in ipairs(sortedEnemyNames) do
        local group = enemyGroups[name]
        local isSelected = false
        for _, selectedName in ipairs(selectedEnemyNames) do
            if selectedName == name then 
                isSelected = true
                break 
            end
        end

        local toggle = CreateToggleSwitch(
            name .. " (" .. group.count .. "x)", 
            "G·∫ßn nh·∫•t: " .. math.floor(group.nearestDistance) .. "m | Ch·ªçn ƒë·ªÉ farm nh√≥m n√†y.", 
            isSelected, 
            function(enabled)
                if enabled then
                    local found = false
                    for _, n in ipairs(selectedEnemyNames) do
                        if n == name then 
                            found = true
                            break 
                        end
                    end
                    if not found then 
                        table.insert(selectedEnemyNames, name) 
                    end
                    print("‚úÖ ƒê√£ th√™m nh√≥m " .. name .. " (" .. group.count .. "x) v√†o danh s√°ch farm.")
                else
                    for i, n in ipairs(selectedEnemyNames) do
                        if n == name then 
                            table.remove(selectedEnemyNames, i)
                            break 
                        end
                    end
                    print("‚ùå ƒê√£ x√≥a nh√≥m " .. name .. " kh·ªèi danh s√°ch farm.")
                end
            end, enemiesContent
        )
    end
end, enemiesContent)

-- ===================================================================
-- VII. DRAG & HOTKEY FUNCTIONALITY
-- ===================================================================

-- Drag functionality for main UI
local dragMain = false
local dragStartMain, startPosMain

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragMain = true
        dragStartMain = input.Position
        startPosMain = MainContainer.Position
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragMain then
        local delta = input.Position - dragStartMain
        MainContainer.Position = UDim2.new(startPosMain.X.Scale, startPosMain.X.Offset + delta.X, startPosMain.Y.Scale, startPosMain.Y.Offset + delta.Y)
    end
end)

TitleBar.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragMain = false
    end
end)

-- Drag functionality for mini UI
local dragMini = false
local dragStartMini, startPosMini

MiniButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragMini = true
        dragStartMini = input.Position
        startPosMini = MiniButton.Position
        MiniButton.ZIndex = 3
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragMini then
        local delta = input.Position - dragStartMini
        MiniButton.Position = UDim2.new(startPosMini.X.Scale, startPosMini.X.Offset + delta.X, startPosMini.Y.Scale, startPosMini.Y.Offset + delta.Y)
    end
end)

MiniButton.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragMini = false
        MiniButton.ZIndex = 2
    end
end)

-- Hotkey (Left Control)
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if input.KeyCode == Enum.KeyCode.LeftControl and not gameProcessedEvent then
        ToggleUI(not HimonoHub.Enabled)
    end
end)

-- ===================================================================
-- VIII. INITIALIZATION
-- ===================================================================

-- Enable Anti-AFK
EnableAntiAFK()

-- Auto-update UI elements
spawn(function()
    while HimonoHub.Parent do
        wait(0.5)
        for _, frame in pairs(tabFrames) do
            local layout = frame:FindFirstChildOfClass("UIListLayout")
            if layout then
                ContentScroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 20)
            end
        end
        clearSelectionBtn.Text = "Clear Selected Positions (" .. #selectedEnemyNames .. "x)"
    end
end)

print("üëë Himono Hub v4.7 - FINAL STABILITY FIXED LOADED! (Press Left Control to toggle)")
