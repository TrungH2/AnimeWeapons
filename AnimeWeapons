local clearSelectionBtn = CreateActionButton("Clear Selected Positions", "X√≥a t·∫•t c·∫£ v·ªã tr√≠ k·∫ª ƒë·ªãch ƒë√£ ch·ªçn (" .. #selectedEnemyPositions .. "x)", function()
    selectedEnemyPositions = {}
    print("üóëÔ∏è ƒê√£ x√≥a danh s√°ch k·∫ª ƒë·ªãch ƒë∆∞·ª£c ch·ªçn.")
end, enemiesContent)
clearSelectionBtn.Parent = enemiesContent

local refreshEnemiesBtn = CreateActionButton("Refresh/Scan Enemies", "Qu√©t l·∫°i k·∫ª ƒë·ªãch trong ph·∫°m vi 500 stud", function()
    for _, child in pairs(enemiesContent:GetChildren()) do
        if child.Name ~= "UILabel" and child ~= refreshEnemiesBtn and child ~= clearSelectionBtn then child:Destroy() end
    end
    
    local enemies = RefreshEnemiesList()
    local enemyNames = {}
    for _, enemy in ipairs(enemies) do table.insert(enemyNames, enemy.Name) end
    
    local uniqueEnemyNames = {}
    local seen = {}
    for _, name in ipairs(enemyNames) do
        if not seen[name] then
            seen[name] = true
            table.insert(uniqueEnemyNames, name)
        end
    end

    CreateLabel("---", UDim2.new(1, 0, 0, 10), UDim2.new(0, 10, 0, 0), enemiesContent, false, 14, COLOR_TEXT_DIM)
    
    for _, name in ipairs(uniqueEnemyNames) do
        local count = 0
        local positions = {}
        for _, enemy in ipairs(enemies) do 
            if enemy.Name == name then 
                count = count + 1 
                table.insert(positions, enemy.Position)
            end 
        end

        local combo = CreateComboBox(name .. " (" .. count .. "x)", "Ch·ªçn ƒë·ªÉ ƒë√°nh d·∫•u v·ªã tr√≠ ho·∫∑c b·ªè qua", {"Add all " .. name .. " to Farm List", "Skip"}, function(selected)
            if selected:find("Add all") then
                for _, pos in ipairs(positions) do
                    table.insert(selectedEnemyPositions, pos)
                end
                print("‚úÖ ƒê√£ th√™m " .. count .. " v·ªã tr√≠ c·ªßa " .. name .. " v√†o danh s√°ch farm.")
            end
        end, enemiesContent)
        combo.Parent = enemiesContent
    end
end, enemiesContent)
refreshEnemiesBtn.Parent = enemiesContent

local dragging, dragInput, dragStart, startPos
SafeConnect(TitleBar.InputBegan, function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainContainer.Position
    end
end)
SafeConnect(TitleBar.InputChanged, function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)
SafeConnect(TitleBar.InputEnded, function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)
SafeConnect(UserInputService.InputChanged, function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainContainer.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

EnableAntiAFK()

task.spawn(function()
    while true do
        for _, frame in pairs(tabFrames) do
            local layout = frame:FindFirstChildOfClass("UIListLayout")
            if layout then
                ContentScroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 20)
            end
        end
        clearSelectionBtn.Text = "Clear Selected Positions (" .. #selectedEnemyPositions .. "x)"
        task.wait(0.5)
    end
end)


